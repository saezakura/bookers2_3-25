

<%= flash[:notice] %>
<%= render 'users/user', user:@user %>
<%= render 'books/list', book:@new_book %>

<div class="col-md-8 offset-md-1">
 <h2>Book detail</h2>
 <table class="table table-hover table-inverse">
  <tbody>
   <tr>
    <td><%= image_tag @book.user.profile_image %></td>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <% if @book.user == current_user %>
    <td> <%= link_to "edit", edit_book_path(@book.id) %></td>
    <td><%= link_to "destroy", book_path(@book),method: :delete,"date-confirm" => "Are you sure?"  %></td>
    <% end %>
   </tr>
  </tbody>
 </table>
</div>