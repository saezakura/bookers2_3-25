<main>
<p class="notice"><%= flash[:notice] %></p>

<% if @book.errors.any? %>
 <%= @book.errors.count %>件のerrorが発生しました。
 <ul>
  <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>


<div class="container">
 <div class="row">
  <div class="col-md-3">
   <%= render 'users/user', user:@user %>
   <%= render 'books/list', book:@new_book %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
   <table class="table table-hover table-inverse">
   <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
   </thead>
   <tbody>
    <% @books.each do |book| %>
    <tr>

     <td><%= image_tag book.user.get_profile_image("40x40") %></td>
     <td><%= link_to book.title, book_path(book.id) %></td>
     <td><%= book.body %></td>

    </tr>
    <% end %>
   </tbody>
   </table>
  </div>

 </div>
</div>
</main>
